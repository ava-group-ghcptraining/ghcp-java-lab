{
    "namingConventions": {
      "classNaming": "PascalCase",
      "methodNaming": "camelCase",
      "variableNaming": "camelCase",
      "parameterNaming": "camelCase",
      "interfacePrefix": "I"
    },
    "indentationAndBraces": {
      "indentationSize": 4,
      "useBracesForControlStructures": true
    },
    "comments": {
      "useXmlComments": true,
      "useCommentsForExplanation": true,
      "avoidUnnecessaryComments": true
    },
    "general": {
      "avoidAbbreviations": true,
      "lineLimit": 120,
      "keepMethodsShortAndFocused": true,
      "followSOLIDPrinciples": true,
      "useExceptionsForExceptions": true,
      "avoidMagicNumbersAndStrings": true
    }
  }